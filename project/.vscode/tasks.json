{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check Python",
            "type": "shell",
            "command": "python --version",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Install Backend Dependencies",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}/backend_service"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Install Frontend Dependencies",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}/frontend_service"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Install All Dependencies",
            "dependsOn": [
                "Install Backend Dependencies",
                "Install Frontend Dependencies"
            ],
            "problemMatcher": []
        },
        {
            "label": "Start Backend Service",
            "type": "shell",
            "command": "python app.py",
            "options": {
                "cwd": "${workspaceFolder}/backend_service"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Running on.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "group": "servers"
            }
        },
        {
            "label": "Start Frontend Service",
            "type": "shell",
            "command": "python app.py",
            "options": {
                "cwd": "${workspaceFolder}/frontend_service"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Running on.*"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "group": "servers"
            }
        },
        {
            "label": "Start Both Services",
            "dependsOn": [
                "Start Backend Service",
                "Start Frontend Service"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Backend Tests",
            "type": "shell",
            "command": "python test_api.py",
            "options": {
                "cwd": "${workspaceFolder}/backend_service"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Validate Project Structure",
            "type": "shell",
            "command": "python validate_project.py",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "View Backend Logs",
            "type": "shell",
            "command": "Get-Content -Path logs/backend_service.log -Wait -Tail 20",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "logs"
            }
        },
        {
            "label": "View Frontend Logs",
            "type": "shell",
            "command": "Get-Content -Path logs/frontend_service.log -Wait -Tail 20",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "logs"
            }
        },
        {
            "label": "View All Logs",
            "dependsOn": [
                "View Backend Logs",
                "View Frontend Logs"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Logs",
            "type": "shell",
            "command": "Remove-Item -Path logs/*.log -Force -ErrorAction SilentlyContinue; Write-Host 'Logs cleaned successfully'",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Open Browser (Frontend)",
            "type": "shell",
            "command": "Start-Process 'http://localhost:5000'",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Open Browser (Backend API)",
            "type": "shell",
            "command": "Start-Process 'http://localhost:5001/api/health'",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "Stop All Services",
            "type": "shell",
            "command": "Get-Process python -ErrorAction SilentlyContinue | Where-Object {$_.Path -like '*project*'} | Stop-Process -Force; Write-Host 'All services stopped'",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        }
    ]
}
